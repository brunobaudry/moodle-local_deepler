{{!
    @template local_deepler/nodeepl_page
    provides a basic alert when connection to the api failed
      Classes required for JS:


  Data attributes required for JS:
  * data-glossary
  * data-id="local_deepler/glossary_glossaryid"

  Context variables required for this template:
  * none

  Example context (json):
  {
    "nodeeplpapi": "Message to tell the user that cnx failed."
  }
}}
<table class="generaltable">
    <thead>
    <tr>
        <th>{{#str}}glossary:name, local_deepler{{/str}}</th>
<!--        <th>{{#str}}glossary:deeplid, local_deepler{{/str}}</th>-->
        <th>{{#str}}glossary:sourcelang, local_deepler{{/str}} &gt; {{#str}}glossary:targetlang, local_deepler{{/str}}</th>
        <th>{{#str}}glossary:nbentries, local_deepler{{/str}}</th>
        <th>{{#str}}glossary:visibility, local_deepler{{/str}}</th>
        <th>{{#str}}glossary:pool, local_deepler{{/str}}</th>
        <th>{{#str}}glossary:lastused, local_deepler{{/str}}</th>
        <th>{{#str}}glossary:actions, local_deepler{{/str}}</th>
    </tr>
    </thead>
    <tbody>
    {{#glossaries}}
        <tr>
            <td title="{{glossaryid}}"><strong>{{name}}</strong><br/><small>{{glossaryid}}</small></td>
<!--            <td>{{glossaryid}}</td>-->
            <td>{{sourcelang}} &gt; {{targetlang}}</td>
            <td>{{entrycount}} {{{entrycountlink}}}</td>
            <td><select
                        class="form-select"
                        data-id="local_deepler/glossary_visibility"
                        data-glossary="{{glossaryid}}"
                        aria-label="{{glossaryselectvisibilityplaceholder}}">
                {{{shared}}}
            </select>
                </td>
            <td>{{tokenid}}</td>
            <td>{{lastused}}</td>
            <td>{{{actions}}}</td>
        </tr>
    {{/glossaries}}
    </tbody>
</table>
<div class="mb-3 pt-4">
    <a href="{{settingsurl}}" target="_self">{{backtosettings}}</a><br/>
    <a href="{{tokensettingsurl}}" target="_self">{{tokensettings}}</a>
</div>
