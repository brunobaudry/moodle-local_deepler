{{!
    @template local_deepler/glossary_selector

    Classes required for JS:
    # local_deepler__glossary

    Data attributes required for JS:
    - local_deepler/glossary_id

    Context variables required for this template:
    - glossaryid
    - hasglossaries
    - glossaryselectplaceholder
    - glossaryselect
    - glossaries
    - glossarylistempty

    Example context (JSON): {
        "glossaryid": "",
        "hasglossaries": "true",
        "glossaryselectplaceholder": "Enter a glossary name",
        "glossaryselect": "Select a glossary",
        "glossaries": [
            {
                "name": "My glossary",
                "glossaryid": "987987-0980",
            },
            {
                "name": "My other glossary",
                "glossaryid": "9999-999"
        ],
        "glossarylistempty": "There are no glossaries available with this language pair.",
    }

}}
<div class="glossary-selector">
    <p class="form-label">{{#str}}glossaryid,local_deepler{{/str}}</p>
    {{#hasglossaries}}
        <select id="local_deepler__glossary"
                class="form-select"
                data-id="local_deepler/glossary_id"
                aria-label="{{glossaryselectplaceholder}}">
            <option value="">{{glossaryselect}}</option>
            {{#glossaries}}
                <option value="{{glossaryid}}">{{name}}</option>
            {{/glossaries}}
        </select>
    {{/hasglossaries}}

    {{^hasglossaries}}
        <em>{{glossarylistempty}}</em>
    {{/hasglossaries}}
</div>
