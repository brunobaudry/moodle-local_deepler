<div id='{{pluginname}}'
     class='activity-item local_deepler__activity py-2 {{visibilityclass}}'>
    <span id='{{id}}' class='h4 sectionname course-content-item d-flex align-self-stretch align-items-center mb-0 p-2'>
        <small class="badge rounded-pill bg-secondary text-dark" data-action="local_deepler__hiddenfromstudents">
            <i class="fa fa-eye-slash" aria-hidden="true"></i>&nbsp;<small>{{#str}}hiddenfromstudents{{/str}}</small>
        </small>

        <span class='{{itempurpose}} activity-icon activityiconcontainer smaller courseicon align-self-start mr-2'>
                    <img src='{{{icon}}}' alt='icon for {{pluginname}}'/>
                </span>
        {{activitydesc}}
        <a class='small p-2'
           id='local_deepler__sourcelink'
           href='{{{link}}}'
           target='_blank'
           title='{{#str}}editbutton, local_deepler{{/str}}'>
                    <i class='icon fa fa-pen fa-fw' aria-hidden='true'></i>
                    </a>
    </span>
    {{{fields}}}
    {{{childs}}}
</div>
