{{!
    @template 'local_deepler/translate_coursesettings'

    Renders the course settings block at the top of the translate page.

    Context variables required for this template:
    * title - header title
    * link - edit link
    * id - header id attribute
    * hclass - header level class (e.g. h3)
    * index - the sectiondata index (typically "0")
    * fields (HTML) - rendered field rows
}}
<div class='section-item'>
    <div class='course-section-header d-flex'>
        <span id='{{id}}' class='{{hclass}} sectionname course-content-item d-flex align-self-stretch align-items-center mb-0 p-2'>
            {{title}}
            <a class='small p-2'
               id='local_deepler__sourcelink'
               href='{{{link}}}'
               target='_blank'
               title='{{#str}}editbutton, local_deepler{{/str}}'>
                <i class='icon fa fa-pen fa-fw' aria-hidden='true'></i>
            </a>
        </span>
    </div>
    <div id='sectiondata[{{index}}]' class='local_deepler__sectiondata'>
        {{{fields}}}
    </div>
</div>
