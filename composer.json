{
  "name": "bruno.baudry/deepler",
  "description": "Moodle plugin to use Deepl autotranslation services",
  "type": "project",
  "require": {
    "deeplcom/deepl-php": "^1.7",
    "symfony/http-client": "^6.4.6",
    "symfony/yaml": "^6.0",
    "nyholm/psr7": "^1.8",
    "phpoffice/phpspreadsheet": "^1.29",
    "maennchen/zipstream-php": "^2.1 || ^3.0",
    "sebastian/comparator": "^4.0",
    "sebastian/diff": "^4.0",
    "sebastian/exporter": "^4.0",
    "sebastian/recursion-context": "^4.0"
  },
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Bruno Baudry",
      "email": "bruno.baudry@bfh.ch"
    }
  ],
  "config": {
    "platform": {
      "php": "8.2.0"
    },
    "vendor-dir": "classes/vendor",
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "autoload": {
    "psr-4": {
      "local_deepler\\": "classes/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpspec/prophecy": "^1.19"
  }
}
